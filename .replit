modules = ["web", "nodejs-20"]

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cloudflared", "gh"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Studio Server Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Studio Server API"

[[workflows.workflow]]
name = "Studio Server Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start.js server status"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Studio Server API"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
